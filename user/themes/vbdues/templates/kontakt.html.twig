{% extends 'partials/base.html.twig' %}
{% block header %}
{% include 'partials/header-klein.html.twig' %}
{% endblock header %}

{% block content %}
     <div class="container">
      <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
               <h3>{{ page.header.title }}</h3>
               {{ content }}
               {% if config.plugins.form.enabled %}
                  {% include "forms/form.html.twig" %}
               {% endif  %}
                <br />
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
        <h3>{{ 'KONTAKT.TITEL'|t }}</h3>
        <address>
          <h2>{{ page.header.organisation }}</h2>
          <p class="h4">{{ page.header.strasse }}<br>
          {{ page.header.plz }} {{ page.header.ort }}</p>
          <br>
          <p class="h5">{{ 'KONTAKT.TELEFON'|t }}: {{ page.header.telefon }}<br>
          {{ 'KONTAKT.TELEFAX'|t }}: {{ page.header.telefax }}</p>
          <p class="h5">{{ 'KONTAKT.EMAIL'|t }}: <a href="mailto:{{ page.header.email }}">{{ page.header.email }}</a></p>
        </address>
        </div>
      </div>
<br />
    </div>
<br /><br /><br />
{% endblock %}
