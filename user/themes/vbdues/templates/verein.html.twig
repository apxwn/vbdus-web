{% embed 'partials/base.html.twig' %}
{% block header %}
{% include 'partials/header-klein.html.twig' %}
{% endblock header %}

{% block content %}
<div class="container">
<div class="row">

<div class="col-md-3">

{% for subseite in page.children %}

	<div class="panel panel-default">
	<div class="panel-heading"><a href="{{ subseite.url }}"><h3 class="panel-title">{{ subseite.title }}</h3></a></div>
	<div class="list-group">{% for modul in subseite.children.modular %}
	<a href="{{ subseite.url }}#{{ modul.slug }}" class="list-group-item">{{ modul.title }}{% if modul.active or subseite.activeChild %}<span class="badge"><i class="glyphicon glyphicon-chevron-right"></i></span>{% endif %}</a>
	{% endfor %}
	</div>
	</div>

{% endfor %}

</div>

{{ page.content }}
</div>
</div>
{% endblock %}
{% endembed %}