<div class="container">
{% if config.plugins.simplesearch.enabled %}
    <div class="widget HTML">
        <h2 class="title">{{ 'SUCHBOX.UEBERSCHRIFT'|t }}</h2>
    
        <label for="schnellsuche">{{ 'SUCHBOX.KURZTEXT'|t }}</label>
        <div class="input-group input-group-lg" style="width: 100%;">
    	<input class="form-control" type="text" placeholder="{{ 'SUCHBOX.PLACEHOLDER'|t }}" value="{{ query }}" data-search-input="{{ base_url }}{{ config.plugins.simplesearch.route}}/query" id="schnellsuche"/>

	
	   	{% if config.plugins.simplesearch.display_button %}
        <button class="search-submit"><img src="{{ url('plugin://simplesearch/assets/search.svg') }}" /></button>
    	{% endif %}

    	<script>
    	jQuery(document).ready(function($){
        	var input = $('[data-search-input]');

        	input.on('keypress', function(event) {
            	if (event.which == 13 && input.val().length >= {{ config.get('plugins.simplesearch.min_query_length', 3) }}) {
                	event.preventDefault();
                	window.location.href = input.data('search-input') + '{{ config.system.param_sep }}' + input.val();
            		}
	        });

        $('.search-submit').on('click', function(event) {
            event.preventDefault();
            window.location.href = input.data('search-input') + '{{ config.system.param_sep }}' + input.val();
    	    });
    	});
    </script>

</div> 
    </div>
{% endif %}
</div>